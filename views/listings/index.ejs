                    <div class="card-img-overlay "> Welcome</div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377; <%= listing.price.toLocaleString("en-IN")%> / night
                      </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
